<% if user_signed_in? %>
  <div class="row">
    <aside class="col-md-3 aside-left">
      <div class="row">
        <div class="col-md-12">
          <section class="user_info">
            <%= render 'shared/user_info' %>
          </section>
          <section class="stats">
            <%= render 'shared/stats' %>
          </section>
        </div>
      </div>
    </aside>
    <div class="col-md-6">
      <h3>Post Feed</h3>
      <div class="postform">
        <%= render 'shared/post_form' %>
      </div>
      <% if current_user.posts.any? %>
        <ol class="microposts">
          <%= render @feed_items %>
        </ol>
        <%= will_paginate @feed_items %>
      <% end %>
    </div>
    <aside class="col-md-3 aside-right">
      <h3>Who to follow</h3>
      <ol class="whotofollow">
        <%= render @who_items %>
      </ol>
    </aside>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Moto Rockt Mx</h1>

    <h2>
      The place where you can share post about experiences, how-to's, 
      tutorials or whatever related to motorcycles.
    </h2>
    <%= link_to 'Sign up now!', new_user_registration_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>